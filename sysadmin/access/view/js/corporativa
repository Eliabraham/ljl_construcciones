$(document).ready(function(){
    $("select").addClass("form-control form-control-sm");
    buscar_v();
    buscar_m();
    buscar_h();
    buscar_vl();
    buscar_jt();
    buscar_ct();
    buscar_pl();
    $("#btngmision").on({
        "click":function(){
            formdata=new FormData($('#fmision')[0]);
            formdata.append("accion","mision");
            $.ajax({
                type: "POST",
                url: "../../controller/corporativa_controller.php",
                data: formdata,
                contentType: false,
                processData: false,
            }).done(
                function(respuesta){
                    $.notify(respuesta, "info");
                    buscar_m();
                    let i=1
                    while ($(`#photo${i}`).length>0){
                        $(`#photo${i}`).remove();
                        i++;
                    }
                }
            ).fail(function(jqXHR, textStatus){
                formato.error_ajax(jqXHR, textStatus);
            });
        }
    });
    $("#btngvision").on({
        "click":function(){
            formdata=new FormData($('#fvision')[0]);
            formdata.append("accion","vision");
            $.ajax({
                type: "POST",
                url: "../../controller/corporativa_controller.php",
                data: formdata,
                contentType: false,
                processData: false,
            }).done(
                function(respuesta){
                    $.notify(respuesta, "info");
                    let i=1
                    while ($(`#photo${i}`).length>0){
                        $(`#photo${i}`).remove();
                        i++;
                    }
                    buscar_v();
                }
            ).fail(function(jqXHR, textStatus){
                formato.error_ajax(jqXHR, textStatus);
            });
        }
    })
    $("#btnghistoria").on({
        "click":function(){
            formdata=new FormData($('#fhistoria')[0]);
            formdata.append("accion","historia");
            $.ajax({
                type: "POST",
                url: "../../controller/corporativa_controller.php",
                data: formdata,
                contentType: false,
                processData: false,
            }).done(
                function(respuesta){
                    $.notify(respuesta, "info");
                    let i=1
                    while ($(`#photo${i}`).length>0){
                        $(`#photo${i}`).remove();
                        i++;
                    }
                    buscar_h();
                }
            ).fail(function(jqXHR, textStatus){
                formato.error_ajax(jqXHR, textStatus);
            });
        }
    });
    $("#add_valor").on({
        "click":function(){
            let datos = info.get_data(['valor'],this);
            info.request_missing_data(datos.err);
            tabla.add_row("t_valores", datos["written"]);
            info.clear_data(['valor']);
            $(`#valor_i`).focus();
        }
    });
    $("#btngvalores").on({
        "click":function(){
            let valores = info.get_data_table(`t_valores`);
            $.ajax({
                type: "POST",
                url: `../../controller/corporativa_controller.php`,
                data:{
                    'accion'      : 'valores',
                    'valores'     : valores,
                }
            })
            .done(function(resp){
                console.log(resp);
                $.notify(resp, "info");
                buscar_vl();
            })
            .fail(function(jqXHR, textStatus){
                formato.error_ajax(jqXHR, textStatus);
            })
        }
    });
    $("#btngjumbotrom").on({
        "click":function(){
            formdata=new FormData($('#fjt')[0]);
            formdata.append("accion","jumbotrom");
            $.ajax({
                type: "POST",
                url: "../../controller/corporativa_controller.php",
                data: formdata,
                contentType: false,
                processData: false,
            }).done(
                function(respuesta){
                    $.notify(respuesta, "info");
                    buscar_jt();
                }
            ).fail(function(jqXHR, textStatus){
                formato.error_ajax(jqXHR, textStatus);
            });
        }
    });
    $("#add_contacto").on({
        "click":function(){
            let datos = info.get_data(['contacto'],this);
            info.request_missing_data(datos.err);
            tabla.add_row("t_contacto", datos["written"]);
            info.clear_data(['contacto']);
            $(`#ctipo`).focus();
        }
    });
    $("#add_politica").on({
        "click":function(){
            let datos = info.get_data(['politica'],this);
            info.request_missing_data(datos.err);
            tabla.add_row("t_politica", datos["written"]);
            info.clear_data(['politica']);
            $(`#ctipo`).focus();
        }
    });
    $("#btngcontacto").on({
        "click":function(){
            let contacto =info.get_data_table(`t_contacto`);
            $.ajax({
                type: "POST",
                url: `../../controller/corporativa_controller.php`,
                data:{'contacto' : contacto,'accion':'contacto'},
            })
            .done(function(resp){
                $.notify(resp,"info");
            })
            .fail(function(jqXHR, textStatus){
                formato.error_ajax(jqXHR, textStatus);
            })
        }
    });
    $("#btngpolitica").on({
        "click":function(){
            let politica =info.get_data_table(`t_politica`);
            console.log(politica);
            $.ajax({
                type: "POST",
                url: `../../controller/corporativa_controller.php`,
                data:{'politica' : politica,'accion':'politica'},
            })
            .done(function(resp){
                $.notify(resp,"info");
            })
            .fail(function(jqXHR, textStatus){
                formato.error_ajax(jqXHR, textStatus);
            })
        }
    })

});
function buscar_v(){
    $.ajax({
        type: "POST",
        url: "../../controller/corporativa_controller.php",
        data:{'accion':'buscar_vision'},
    }).done(
        function(respuesta){
            if(respuesta.length>0){
                res = (JSON.parse(respuesta));
                $("#vision").val(res['descripcion']);
                $("#fotografia_vision").html(res['imagenes']);
            }
        }
    ).fail(function(jqXHR, textStatus){
        formato.error_ajax(jqXHR, textStatus);
    });
}
function buscar_m(){
    $.ajax({
        type: "POST",
        url: "../../controller/corporativa_controller.php",
        data:{'accion':'buscar_mision'},
    }).done(
        function(respuesta){
            if(respuesta.length>0){
                res = (JSON.parse(respuesta));
                $("#mision").val(res['descripcion']);
                $("#fotografia_mision").html(res['imagenes']);
            }
        }
    ).fail(function(jqXHR, textStatus){
        formato.error_ajax(jqXHR, textStatus);
    });
}
function buscar_h(){
    $.ajax({
        type: "POST",
        url: "../../controller/corporativa_controller.php",
        data:{'accion':'buscar_historia'},
    }).done(
        function(respuesta){
            if(respuesta.length>0){
                res = JSON.parse(respuesta);
